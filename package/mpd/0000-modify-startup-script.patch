+	ulimit -HS -l $IO_URING_MEMLIMIT -r $(expr $HARDIRQ_PRIORITY - 1)
 	# mpd creates its own $PIDFILE, do not use --pidfile 
 	start-stop-daemon --start --exec "/usr/bin/$DAEMON"
