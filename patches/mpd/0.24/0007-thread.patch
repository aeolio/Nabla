+		enable_rtopt,
+		enable_memlock,
+		stack_reserve,
+		heap_reserve);
+
+	for ( auto &x : priority_tbl ) {
+		FmtDebug(realtime_domain,
+			"thread name: '{}'  policy: {}  priority: {}  timerslack: {}\n",
+			x.second->name.c_str(),
+			GetPolicyName(x.second->policy).c_str(),
+			x.second->priority,
+			x.second->timerslack);
+	}
+}
