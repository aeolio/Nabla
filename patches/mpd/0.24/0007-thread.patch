+std::string
+RealtimeOption::GetPolicyName(int policy) {
+	std::string name("UNDEF(" + std::to_string(policy) + ")");
+
+	for (auto &x : policy_tbl) {
+		if ( x.second == policy ) {
+			name = x.first;
+			break;
+		}
+	}
+	return name;
+}
