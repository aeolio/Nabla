+void RealtimeOption::Initialize(const ConfigData &config) {
+	SetParameter(config);
+	if ( !isEnableRt() ) {
+		return;
+	}
+	SetOutputPriority(config);
+	ResetLimit();
+	PrintPriorityTbl();
+}
