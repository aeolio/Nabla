+// trim from end (in place)
+static inline std::string &
+rtrim(std::string &s) {
+	s.erase(std::find_if(s.rbegin(), s.rend(), [](int ch) {
+		return !std::isspace(ch);
+	}).base(), s.end());
+	return s;
+}
+
+static int
+strtonum(const char *str, unsigned long *ival) {
+	char *endptr = NULL;
+
+	*ival = strtoul(str, &endptr, 10);
+	return (*endptr == '\0') ? 0 : -1;
+}
